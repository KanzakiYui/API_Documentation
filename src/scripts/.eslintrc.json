{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "array-bracket-spacing":            ["warn", "always"],
        "array-callback-return":            ["warn", { "allowImplicit": true }],
        "block-spacing":                    "warn",             
        "block-scoped-var":                 "warn",
        "camelcase":                        "warn",
        "default-case":                     "warn",
        "indent":                           ["warn", 4],
        "linebreak-style":                  ["warn", "windows"],
        "no-console":                       "warn",
        "no-extra-parens":                  "warn",
        "no-floating-decimal":              "warn",
        "no-lonely-if":                     "warn",
        //TODO
        "no-multi-spaces":                  "warn",
        "no-new-wrappers":                  "warn",
        "no-return-await":                  "warn",
        "no-unused-vars":                   ["warn", {"vars": "all", "args": "after-used"}],
        "quotes":                           ["warn", "single"],
        "radix":                            "warn",
        "semi":                             ["warn", "never"],
        "yoda":                             "warn"

    }
}