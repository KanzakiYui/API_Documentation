{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "warn",     4
        ],
        "linebreak-style": [
            "warn",     "windows"
        ],
        "no-console":   "warn",
        "no-unused-vars": [
            "warn",     {"vars": "all", "args": "after-used"}
        ],
        "quotes": [
            "warn",     "single"
        ],
        "semi": [
            "warn",     "never"
        ]
    }
}